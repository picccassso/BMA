<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Main Settings Title -->
        <TextView
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Connection Settings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/connection_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”— Connection Settings"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/connection_status_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status:"
                android:textColor="#B3FFFFFF"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/connection_status_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                tools:text="âœ… Connected to http://192.168.1.100:8008" />
                
            <com.google.android.material.button.MaterialButton
                android:id="@+id/disconnect_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ”Œ Disconnect"
                android:backgroundTint="#FF5722"
                android:textColor="#FFFFFF"
                app:rippleColor="#33FFFFFF"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/reconnect_button"
                style="@style/Widget.BMA.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“± Scan QR to Connect"
                android:visibility="gone" />

        </LinearLayout>

        <!-- Backup and Restore Settings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/backup_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’¾ Backup &amp; Restore"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/backup_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Backup and restore your playlists and app settings"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backup_button"
                style="@style/Widget.BMA.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¤ Create Backup"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/restore_button"
                style="@style/Widget.BMA.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“¥ Restore Backup" />

        </LinearLayout>

        <!-- Download Settings Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/rounded_background"
            android:padding="16dp">

            <TextView
                android:id="@+id/download_settings_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â¬‡ï¸ Download Settings"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/download_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configure offline downloads and storage options"
                android:textColor="#B3FFFFFF"
                android:textSize="14sp"
                android:layout_marginBottom="16dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/download_quality_button"
                style="@style/Widget.BMA.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸŽµ Download Quality"
                android:enabled="false"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/storage_location_button"
                style="@style/Widget.BMA.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Storage Location"
                android:enabled="false"
                android:layout_marginBottom="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clear_cache_button"
                style="@style/Widget.BMA.Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ—‘ï¸ Clear Cache"
                android:enabled="false" />

            <TextView
                android:id="@+id/download_coming_soon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Coming soon..."
                android:textColor="#66FFFFFF"
                android:textSize="12sp"
                android:textStyle="italic"
                android:gravity="center"
                android:layout_marginTop="8dp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView> 